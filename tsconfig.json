{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "target": "es2020",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["nodes/**/*", "credentials/**/*", "utils/**/*"],
  "exclude": ["node_modules/**/*", "**/*.spec.ts"]
}
